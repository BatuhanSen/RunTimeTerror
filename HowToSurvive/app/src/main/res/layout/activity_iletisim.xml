<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Iletisim_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_iletisim"
            android:layout_width="187dp"
            android:layout_height="110dp"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="126dp"
            android:layout_marginRight="126dp"
            android:src="@drawable/how_to_surive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/iletisim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="136dp"
            android:layout_marginRight="136dp"
            android:gravity="center_horizontal"
            android:text="İLETİŞİM"
            android:textAlignment="center"
            android:textColor="#F2CF59"
            android:textSize="34dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_iletisim" />

        <androidx.cardview.widget.CardView
            android:id="@+id/iletisim_card"
            android:layout_width="183dp"
            android:layout_height="175dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/adres_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iletisim_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageTelefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="0dp"
                    app:srcCompat="@drawable/ic_baseline_phone_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Telefon  Numarası"
                    android:textAlignment="center"
                    android:textColor="#F2CF59" />

                <TextView
                    android:id="@+id/textTelefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="+0905333658800"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_mail_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/mailAdres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Mail Adresi"
                    android:textAlignment="center"
                    android:textColor="#F2CF59" />

                <TextView
                    android:id="@+id/textMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="howtosurvive@gmail.com"
                    android:textAlignment="center" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/adres_card"
            android:layout_width="183dp"
            android:layout_height="175dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="7dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toTopOf="@+id/geribildirim_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iletisim_card"
            app:layout_constraintTop_toBottomOf="@+id/iletisim_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_map_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textAdres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Yerleşke Adres"
                    android:textAlignment="center"
                    android:textColor="#F2CF59" />

                <TextView
                    android:id="@+id/textAdres_detay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Söğütözü Caddesi No:43, Söğütözü,Ankara, 06560 Türkiye"
                    android:textAlignment="center" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/geribildirim_card"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iletisim_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/bizeYaz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="151dp"
                    android:layout_marginLeft="151dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="144dp"
                    android:layout_marginRight="144dp"
                    android:gravity="center_horizontal"
                    android:text="Bize Yazın"
                    android:textAlignment="center"
                    android:textColor="#F2CF59"
                    android:textSize="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/geribildirim_ad"
                    android:layout_width="169dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/edit_text_border_iletisim"
                    android:hint="Adınız "
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bizeYaz" />

                <EditText
                    android:id="@+id/geribildirim_soyad"
                    android:layout_width="169dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/edit_text_border_iletisim"
                    android:hint="Soyadınız "
                    android:textSize="15dp"
                    android:inputType="text"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/geribildirim_ad"
                    app:layout_constraintTop_toBottomOf="@+id/bizeYaz" />

                <EditText
                    android:id="@+id/geribildirim_mail"
                    android:layout_width="169dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_border_iletisim"
                    android:hint="Email Adresiniz"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/geribildirim_ad" />

                <EditText
                    android:id="@+id/geribildirim_telefon"
                    android:layout_width="169dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/edit_text_border_iletisim"
                    android:hint="Telefon Numaranız"
                    android:textSize="15dp"
                    android:inputType="phone"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/geribildirim_mail"
                    app:layout_constraintTop_toBottomOf="@+id/geribildirim_soyad" />

                <EditText
                    android:id="@+id/geribildirim_mesaj"
                    android:layout_width="358dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/edit_text_border_iletisim"
                    android:hint="Mesajınız"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/geribildirim_mail" />

                <Button
                    android:id="@+id/gonder_but"
                    android:layout_width="82dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="297dp"
                    android:layout_marginLeft="297dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:backgroundTint="#F2CF59"
                    android:text="Gönder"
                    android:textSize="10dp"
                    app:cornerRadius="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/geribildirim_mesaj" />

                <ProgressBar
                    android:id="@+id/pbarr"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="122dp"
                    android:layout_marginLeft="122dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/gonder_but"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/geribildirim_mesaj" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <include layout="@layout/main_toolbar" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/navigation_drawer"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>