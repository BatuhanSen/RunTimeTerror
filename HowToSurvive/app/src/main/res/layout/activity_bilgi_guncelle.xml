<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Bilgi_Guncelle_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="206dp"
            android:layout_height="85dp"
            android:layout_marginStart="102dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="103dp"
            android:layout_marginRight="103dp"
            android:src="@drawable/how_to_surive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/guncelleSayfa"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:text="Bilgilerimi Güncelle"
            android:textAlignment="center"
            android:textColor="#FA6E4F"
            android:textSize="34dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />


        <EditText
            android:id="@+id/kullanici_adi_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Ad"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@+id/kullanici_soyad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guncelleSayfa" />

        <EditText
            android:id="@+id/kullanici_soyad_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Soyad"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guncelleSayfa" />

        <EditText
            android:id="@+id/kullanici_dogumTarih_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Doğum Tarihi"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kullanici_adi_guncelle" />


        <EditText
            android:id="@+id/kullanici_mail_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Mail"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kullanici_dogumTarih_guncelle" />

        <EditText
            android:id="@+id/kullanici_telefon_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Telefon"
            android:inputType="phone"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kullanici_cinsiyet_guncelle" />

        <EditText
            android:id="@+id/kullanici_cinsiyet_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Cinsiyet: E/K"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kullanici_soyad_guncelle" />


        <EditText
            android:id="@+id/kullanici_eskisifre_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Eski Şifre"
            android:inputType="textPassword"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kullanici_mail_guncelle" />

        <EditText
            android:id="@+id/sifre_tekrar_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Yeni Şifre Tekrar"
            android:inputType="textPassword"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kullanici_eskisifre_guncelle" />

        <EditText
            android:id="@+id/sifre_yeni_guncelle"
            android:layout_width="135dp"
            android:layout_height="41dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_border_lokasyon"
            android:hint="Yeni Şifre"
            android:inputType="textPassword"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kullanici_telefon_guncelle" />

        <Button
            android:id="@+id/gulleceme_but"
            android:layout_width="127dp"
            android:layout_height="49dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginEnd="144dp"
            android:layout_marginRight="144dp"
            android:layout_marginBottom="72dp"
            android:backgroundTint="#FA6E4F"
            android:baselineAligned="false"
            android:text="Güncelle"
            app:cornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <include layout="@layout/main_toolbar" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/navigation_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>