<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/dogal_afet_but"
            android:layout_width="357dp"
            android:layout_height="90dp"
            android:text="Doğal Afetler"
            app:backgroundTint="#8EC9BB"
            app:cornerRadius="25dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.293" />

        <Button
            android:id="@+id/acil_durum_but"
            android:layout_width="357dp"
            android:layout_height="90dp"
            android:text="Acil Durum"
            app:backgroundTint="#C5D7C0"
            app:cornerRadius="25dp"
            app:icon="@android:drawable/stat_sys_phone_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.433" />

        <Button
            android:id="@+id/blog_but"
            android:layout_width="357dp"
            android:layout_height="90dp"
            android:text="Blog"
            app:backgroundTint="#FB8E7E"
            app:cornerRadius="25dp"
            app:icon="@android:drawable/sym_action_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.574" />

        <Button
            android:id="@+id/iletisim_but"
            android:layout_width="357dp"
            android:layout_height="90dp"
            android:text="İletişim"
            app:backgroundTint="#F2CF59"
            app:cornerRadius="25dp"
            app:icon="@android:drawable/sym_action_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.714" />

        <Button
            android:id="@+id/kullanici_girisi_but"
            android:layout_width="357dp"
            android:layout_height="90dp"
            android:text="Kullanıcı Bilgileri"
            app:backgroundTint="#FA6E4F"
            app:cornerRadius="25dp"
            app:icon="@android:drawable/btn_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.854" />

        <ImageView
            android:id="@+id/uygulama_logosu"
            android:layout_width="134dp"
            android:layout_height="131dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintBottom_toTopOf="@+id/dogal_afet_but"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_baseline_android_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/uygulama_aciklama"
            android:layout_width="224dp"
            android:layout_height="38dp"
            android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp"
            android:layout_marginBottom="20dp"
            android:text="Doğal Afet Takip Sistemi"
            android:textSize="14dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/dogal_afet_but"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/uygulama_adi"
            android:layout_width="224dp"
            android:layout_height="38dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:text="HOW TO SURVIVE"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/uygulama_aciklama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/username"
            android:layout_width="221dp"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:text="ad"
            android:textAlignment="viewStart"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/uygulama_logosu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uygulama_aciklama"
            android:gravity="start" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <include layout="@layout/main_toolbar" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/navigation_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>

