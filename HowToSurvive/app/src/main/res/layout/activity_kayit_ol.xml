<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kayit_Ol_Activity">


    <EditText
        android:id="@+id/kullanici_adi"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:hint="Ad"
        android:inputType="text"
        android:background="@drawable/edit_text_border_kayit"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayit" />

    <EditText
        android:id="@+id/kullanici_soyad"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:hint="Soyad"
        android:inputType="text"
        android:background="@drawable/edit_text_border_kayit"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullanici_adi" />

    <EditText
        android:id="@+id/kullanici_dogumTarih"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:hint="Doğum Tarihi"
        android:background="@drawable/edit_text_border_kayit"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullanici_soyad" />

    <EditText
        android:id="@+id/kullanici_mail"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:hint="Mail"
        android:background="@drawable/edit_text_border_kayit"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullanici_dogumTarih" />


    <EditText
        android:id="@+id/kullanici_telefon"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:hint="Telefon"
        android:background="@drawable/edit_text_border_kayit"
        android:padding="10dp"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullanici_mail" />


    <EditText
        android:id="@+id/kullanici_sifre"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:hint="Şifre"
        android:background="@drawable/edit_text_border_kayit"
        android:padding="10dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullanici_telefon" />

    <EditText
        android:id="@+id/sifre_tekrar"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:hint="Şifre Tekrar"
        android:background="@drawable/edit_text_border_kayit"
        android:padding="10dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullanici_sifre" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="206dp"
        android:layout_height="85dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:src="@drawable/ic_baseline_android_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kayit"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginEnd="123dp"
        android:layout_marginRight="123dp"
        android:gravity="center_horizontal"
        android:text="Kayıt Ol"
        android:textAlignment="center"
        android:textColor="#FA6E4F"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/kayit_olma"
            android:layout_width="84dp"
            android:layout_height="59dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#FA6E4F"
            android:baselineAligned="false"
            android:text="Kayıt Ol"
            app:cornerRadius="25dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

